<main class="w-11/12 flex-1 max-w-screen-xl mx-auto bg-white mt-24 pb-24 md:px-8 xl:px-0" id="contents">
  <div class="text-center w-full px-4 bg-white md:w-2/3 lg:w-1/2 mx-auto" id="input">
    <h1 class="font-black mb-8 text-2xl">振込申請画面</h1>
    <div class="text-left">
      <div class="mb-6">
        <div class="block text-grey-500 text-sm font-bold mb-2">
          銀行口座
        </div>
        <div class="py-2 px-3 w-full">URIKAI銀行</div>
      </div>
      <div class="mb-6">
        <div class="block text-grey-500 text-sm font-bold mb-2">
          口座種別
        </div>
        <div class="py-2 px-3 w-full">普通</div>
      </div>
      <div class="mb-6">
        <div class="block text-grey-500 text-sm font-bold mb-2">
          支店名
        </div>
        <div class="py-2 px-3 w-full">URIKAI支店</div>
      </div>
      <div class="mb-6">
        <div class="block text-grey-500 text-sm font-bold mb-2">
          口座番号
        </div>
        <div class="py-2 px-3 w-full">1234567</div>
      </div>
      <div class="mb-6">
        <div class="block text-grey-500 text-sm font-bold mb-2">
          口座名義
        </div>
        <div class="py-2 px-3 w-full">うりかい太郎</div>
      </div>
    </div>
    <form action="" mehod="">
      <div class="text-left">
        <div class="mb-4 mb-6 border-t border-b border-gray-300">
          <div class="block text-grey-500 text-sm font-bold mb-2">
            出金可能額
          </div>
          <div class="py-2 px-3 w-full">1,000円</div>
        </div>
        <div class="mb-6">
          <label class="block text-grey-500 text-sm font-bold mb-2" for="username">出金申請額
          </label>
          <input class="appearance-none border border-gray-300 rounded py-2 px-3 text-grey-darker w-full" type="text" placeholder="1000">
        </div>
      </div>
      <div class="text-left mt-12">
        <div class="text-center mb-2 flex flex-col space-y-4">
          <button class="text-base font-bold bg-red-500 text-white p-2 w-full block py-4 rounded-sm" value="">申請する</button>
        </div>
      </div>
      <div class="text-left mt-12">
        <div class="text-center mb-2 flex flex-col space-y-4">
          <button class="text-base font-bold bg-white border border-red-500 text-red-500 p-2 w-full block py-4 rounded-sm" value="">戻る</button>
        </div>
      </div>
    </form>
  </div>
</main>
